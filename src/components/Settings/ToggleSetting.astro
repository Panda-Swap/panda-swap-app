---
interface Props {
  label: string;
  name: string;
  group: string;
  checked: boolean;
}

const { label, name, group, checked } = Astro.props;
---

<label class="flex items-center cursor-pointer">
  <div class="relative">
    <input
      type="checkbox"
      name={name}
      data-settings-group={group}
      checked={checked}
      class="sr-only peer"
    />
    <div class="w-11 h-6 bg-gray-200 rounded-full peer dark:bg-gray-700 
                peer-checked:after:translate-x-full peer-checked:after:border-white 
                after:content-[''] after:absolute after:top-0.5 after:left-[2px] 
                after:bg-white after:border-gray-300 after:border after:rounded-full 
                after:h-5 after:w-5 after:transition-all dark:border-gray-600 
                peer-checked:bg-blue-600">
    </div>
  </div>
  <span class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300" data-i18n={`settings.${group}.${name}`}>
    {label}
  </span>
</label>

<style>
  /* Optional: Add hover effect */
  .peer:hover + div {
    @apply bg-gray-300 dark:bg-gray-600;
  }
  
  /* Optional: Add focus styles */
  .peer:focus + div {
    @apply ring-4 ring-blue-300 dark:ring-blue-800;
  }
  
  /* Smooth transition for the toggle */
  .peer:checked + div {
    @apply transition-colors duration-200;
  }
</style>