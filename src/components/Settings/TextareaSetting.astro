---
interface Props {
  label: string;
  name: string;
  group: string;
  value: string;
}

const { label, name, group, value } = Astro.props;
---

<label class="block">
  <span class="text-sm text-gray-700 dark:text-gray-300">{label}</span>
  <textarea
    name={name}
    class="mt-1 block w-full rounded-md border-gray-300 bg-gray-200 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
    rows="3"
    data-settings-group={group}
  >{value}</textarea>
</label>