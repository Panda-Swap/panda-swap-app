---
import Card from '../components/Card.astro'
interface Props {
  plateName: string;
  colors: Array<{ color: string; weight: number }>;
  totalTime: number;
  modelImage?: string;
}

const { plateName, colors, totalTime, modelImage } = Astro.props;
---

<Card title={plateName}>
  {modelImage && (
    <div class="mb-4">
      <img
        src={modelImage}
        alt={`Preview of ${plateName}`}
        class="w-full h-48 object-contain rounded-lg"
      />
    </div>
  )}
  
  <div class="space-y-4">
    <div>
      <h4 class="font-medium text-gray-700 dark:text-gray-300 mb-2">Colors Used:</h4>
      <ul class="space-y-1">
        {colors.map(({ color, weight }) => (
          <li class="flex justify-between text-gray-600 dark:text-gray-400">
            <span>{color}</span>
            <span>{weight.toFixed(2)}g</span>
          </li>
        ))}
      </ul>
    </div>
    
    <div>
      <h4 class="font-medium text-gray-700 dark:text-gray-300 mb-2">Print Time:</h4>
      <p class="text-gray-600 dark:text-gray-400">
        {Math.floor(totalTime / 60)}h {Math.round(totalTime % 60)}m
      </p>
    </div>
  </div>
</Card>
